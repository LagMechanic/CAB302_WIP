<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.text.Text?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.zenbrowser.a1.Controller.RegisterController"
            style="-fx-background-color: #D1FFBD;">
<padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
</padding>
<center>
    <VBox spacing="20.0" prefWidth="400" alignment="CENTER">
        <Label text ="Zenbrowser" style="-fx-font-size:60px; -fx-font-weight: bold"/>
        <Label text ="Register" style="-fx-font-size:40px; -fx-font-weight: bold"/>

        <GridPane hgap="10.0" vgap="10.0" >
            <columnConstraints>
                <ColumnConstraints minWidth="70" />
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>
            <Label text="Create new account" GridPane.rowIndex="0" style="-fx-font-size:20px;"/>
            <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <Label text="Phone:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <TextField fx:id="usernameTxt" GridPane.columnIndex="1" GridPane.rowIndex="1" maxWidth="Infinity"/>
            <TextField fx:id="PasswordTxt" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <TextField fx:id="emailTextField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <TextField fx:id="phoneTextField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        </GridPane>
        <VBox spacing="20.0" alignment="CENTER">
            <Button text="Register" fx:id ="RegisterButton" onAction="#onRegisterButtonClick"
                    style="-fx-min-width: 100px; -fx-min-height: 50px; -fx-font-size: 20px;"/>
            <Label text="Do not have a zen account? Create Now!" style="-fx-font-size:20px;"/>
            <Button text="Login"  fx:id ="LoginPageButton" onAction="#onLoginPageButtonClick"
                    style="-fx-min-width: 100px; -fx-min-height: 50px; -fx-font-size: 20px;"/>
        </VBox>
    </VBox>
</center>
</BorderPane>