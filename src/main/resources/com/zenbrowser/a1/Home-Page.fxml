<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: #D1FFBD;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.zenbrowser.a1.Controller.HomePageController">

    <center>
        <VBox alignment="CENTER" spacing="10">
            <Label style="-fx-font-size: 18px;" text="History" />
            <ListView fx:id="historyList" prefWidth="250" />
        </VBox>

        <VBox alignment="CENTER" spacing="10">
            <Label style="-fx-font-size: 18px;" text="Dashboard" />
            <Button text="Settings" />
            <Button fx:id="GoToProfileButton" onAction="#onGoToProfileLimits" text="Profile Limits" />
        </VBox>

        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="400.0" spacing="20.0" BorderPane.alignment="CENTER">
            <children>
                <Button text="Usage Reports" />
                <Button text="Notification Settings" />
                <Button text="My Account Settings" />
            </children>
        </VBox>
    </center>
</BorderPane>
