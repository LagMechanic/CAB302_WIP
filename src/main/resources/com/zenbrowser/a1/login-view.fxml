<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.text.Text?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.zenbrowser.a1.Controller.LoginController"
            prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: #D1FFBD;">

    <VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>
        <Text>
            Login
        </Text>
        <Label>Username</Label>
        <TextField fx:id="username"/>
        <Label>Password</Label>
        <TextField fx:id="password"/>


        <Button text="Login" onAction="#onLoginButtonClick"/>
        <Label>New? Create your account </Label>
        <Button text="Register" fx:id="GoToRegisterPageButton"/>

    </VBox>

</AnchorPane>
