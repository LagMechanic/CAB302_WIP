<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.zenbrowser.a1.Controller.MainControllers.UsageInsightsController">
    <children>
        <HBox layoutX="22.0" layoutY="11.0" prefHeight="600.0" prefWidth="800.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <VBox prefHeight="600.0" prefWidth="400.0" HBox.hgrow="ALWAYS">
                    <children>
                        <BarChart fx:id="topVisitedChart" prefHeight="300.0" prefWidth="400.0" title="Top Visited Sites" VBox.vgrow="ALWAYS">
                            <xAxis>
                                <CategoryAxis label="Site Name" side="BOTTOM" />
                            </xAxis>
                            <yAxis>
                                <NumberAxis label="Visits" side="LEFT" />
                            </yAxis>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </BarChart>
                        <LineChart fx:id="historyChart" prefHeight="300.0" prefWidth="400.0" title="Sites Per Day" VBox.vgrow="ALWAYS">
                            <xAxis>
                                <CategoryAxis label="Date" side="BOTTOM" />
                            </xAxis>
                            <yAxis>
                                <NumberAxis label="Sites Opened" side="LEFT" />
                            </yAxis>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </LineChart>
                    </children>
                </VBox>
                <VBox prefHeight="600.0" prefWidth="400.0" HBox.hgrow="ALWAYS">
                    <children>
                        <BarChart fx:id="timeOfDayChart" prefHeight="300.0" prefWidth="400.0" title="Visits by Hour of Day" VBox.vgrow="ALWAYS">
                            <xAxis>
                                <CategoryAxis label="Hour of Day" side="BOTTOM" />
                            </xAxis>
                            <yAxis>
                                <NumberAxis label="Visits" side="LEFT" />
                            </yAxis>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </BarChart>
                        <BarChart fx:id="dayOfWeekChart" prefHeight="300.0" prefWidth="400.0" title="Visits by Day of Week" VBox.vgrow="ALWAYS">
                            <xAxis>
                                <CategoryAxis label="Day of Week" side="BOTTOM" />
                            </xAxis>
                            <yAxis>
                                <NumberAxis label="Visits" side="LEFT" />
                            </yAxis>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </BarChart>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</AnchorPane>
