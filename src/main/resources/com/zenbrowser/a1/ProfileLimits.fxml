    <center>
            <ScrollPane prefWidth="400" fitToWidth="true" >
                <VBox spacing="5" alignment="CENTER" style="-fx-background-color: #D1FFBD">
                    <Label text="Profile:" />
                    <ComboBox prefWidth="150.0">
