<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: #D1FFBD;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.zenbrowser.a1.Controller.ProfileLimitsController">

    <center>
            <ScrollPane fitToWidth="true" prefWidth="400">
                <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #D1FFBD">
                    <Label text="Profile:" />
                    <ComboBox prefWidth="150.0" promptText="Select Profile">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Profile 1" />
                                <String fx:value="Profile 2" />
                                <String fx:value="Profile 3" />
                            </FXCollections>
                        </items>
                    </ComboBox>
                    <Label text="Add Limit: " />
                    <ComboBox fx:id="limitComboBox" prefWidth="150.0" promptText="Add Limit" >
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="30 minutes" />
                                    <String fx:value="45 minutes" />
                                    <String fx:value="1 hour" />
                                    <String fx:value="1 hour 30 minutes" />
                                    <String fx:value="2 hours" />
                                    <String fx:value="2 hour 30 minutes" />
                                    <String fx:value="3 hours" />
                                    <String fx:value="3 hour 30 minutes" />
                                    <String fx:value="4 hours" />
                                    <String fx:value="4 hour 30 minutes" />
                                    <String fx:value="5 hours" />
                                    <String fx:value="5 hours 30 minutes" />
                                    <String fx:value="6 hours" />
                                </FXCollections>
                        </items>
                    </ComboBox>
                    <Label text="Add URL:  " />
                    <TextField fx:id="urlField" maxWidth="150" prefWidth="50" />
                    <Button fx:id="URLlimit" onAction="#addUrlAndLimit" text="Add to Profile" />
                    <Region VBox.vgrow="ALWAYS" />
                    <HBox alignment="BOTTOM_CENTER">
                        <TableView fx:id="urlTable">
                            <columns>
                                <TableColumn prefWidth="200" text="Limit" />
                                <TableColumn prefWidth="200" text="URL" />
                            </columns>
                        </TableView>
                    </HBox>
                </VBox>
            </ScrollPane>
    </center>

    <left>
        <VBox alignment="CENTER" spacing="10">
            <Label style="-fx-font-size: 18px;" text="          Dashboard          " />
            <Button text="Settings" />
            <Button fx:id="GoToProfileButton" onAction="#onGoToProfileLimits" text="Profile Limit Settings" />
            <Button text="Usage Reports" />
            <Button text="Notification Settings" />
            <Button text="My Account Settings" />
        </VBox>
    </left>
</BorderPane>
