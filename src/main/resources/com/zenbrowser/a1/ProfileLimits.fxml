                    </ComboBox>
                    <Label text="Add Limit: "/>
                    <TextField fx:id="limitField" prefWidth="50" maxWidth="150"/>
                    <Label text="Add URL:  " />
                    <TextField fx:id="urlField" prefWidth="50" maxWidth="150"/>
                    <Button text="Add to Profile" onAction="#addUrlAndLimit"/>
                    <Region VBox.vgrow="ALWAYS"/>
                    <HBox alignment="BOTTOM_CENTER">
                        <TableView fx:id="urlTable">
                            <columns>
                                <TableColumn text="URL" prefWidth="200" />
                                <TableColumn text="Limit" prefWidth="200" />
                            </columns>
                        </TableView>
                    </HBox>
                </VBox>
            </ScrollPane>
    </center>

